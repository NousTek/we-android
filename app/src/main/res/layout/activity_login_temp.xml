<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    tools:context=".ui.login.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/img_we_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_45sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:text="@string/splash_logo"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/_100sdp" />


            <LinearLayout
                android:id="@+id/splash_details_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_we_logo"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_splash_details_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_5sdp"
                    android:visibility="invisible"
                    android:text="@string/splash_details_title"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/_13sdp" />

                <View
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:visibility="invisible"
                    android:layout_gravity="center_horizontal"
                    android:background="#FFFF7749" />


                <TextView
                    android:id="@+id/txt_splash_details_sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_5sdp"
                    android:visibility="invisible"
                    android:text="@string/splash_details_sub_title"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/_14sdp" />


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/splash_details_layout"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/login_border">


                <TextView
                    android:id="@+id/txt_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="@string/login_welcome"
                    android:textColor="@color/login_welcome_text"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:id="@+id/txt_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_welcome"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/login_details"
                    android:textColor="@color/login_welcome_text"
                    android:textSize="@dimen/_12sdp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/usernameLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_below="@+id/txt_details"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:hint="@string/login_email_hint"
                    android:textColorHint="@color/login_hint"
                    app:counterEnabled="false"
                    app:counterMaxLength="5"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:counterTextAppearance="@style/CounterText"
                    app:errorEnabled="true"
                    app:hintTextAppearance="@style/HintText"

                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:digits="abcdefghijklmnopqrstuvwxyz1234567890@#$*.?/_-"
                        android:gravity="center_vertical"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/_10sdp"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_below="@+id/usernameLayout"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:hint="@string/login_password_hint"
                    android:textColorHint="@color/login_hint"
                    app:counterEnabled="false"
                    app:counterMaxLength="5"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:counterTextAppearance="@style/CounterText"
                    app:errorEnabled="true"
                    app:hintTextAppearance="@style/HintText"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:gravity="center_vertical"
                        android:inputType="textPassword"
                        android:paddingRight="@dimen/_20sdp"

                        />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/txt_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/passwordLayout"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/login_forgot_password"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp" />


                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_forgot_password"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:background="@drawable/button_fill_border"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txt_or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_login"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/or"
                    android:textColor="@color/login_hint"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:id="@+id/socialMediaContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_or"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/fbBtn"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/fb_btn_bg"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="f"
                            android:layout_toLeftOf="@+id/fbTitleTV"
                            android:layout_marginRight="12dp"
                            android:layout_centerVertical="true"
                            android:textSize="26sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/fbTitleTV"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Facebook"
                            android:textColor="#DEFFFFFF"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <com.facebook.login.widget.LoginButton
                            android:id="@+id/fb_connect"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_alignParentBottom="true"
                            android:textSize="15dp"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/googleBtn"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/google_btn_bg"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Google"
                            android:gravity="center"
                            android:drawablePadding="10dp"
                            android:drawableLeft="@drawable/ic_google_icon"
                            android:textColor="#DE000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_create_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/socialMediaContainer"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_signup_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_need_an_account"
                        android:textColor="@color/color_registration_txt"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/text_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="7dp"
                        android:text="@string/txt_sign_up"
                        android:textColor="#499CFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_create_account"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@color/wa_container_bg">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                    <TextView
                        android:id="@+id/txt_issue"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:textColor="#DE000000"
                        android:drawableLeft="@drawable/ic_whatsapp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="@string/login_issue" />
                    <TextView
                        android:id="@+id/txt_post_on_wa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/txt_issue"
                        android:textStyle="bold"
                        android:text="@string/txt_post_on_whatsapp"
                        android:textColor="#DE000000"
                        android:textSize="14sp" />
                    </RelativeLayout>
                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


    <RelativeLayout
        android:id="@+id/forgotPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_background"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/card_border">


            <ImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/ic_cancel" />


            <TextView
                android:id="@+id/txt_forgot_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_10sdp"
                android:text="Forgot Password"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/forgotLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_below="@+id/img_close"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:hint="@string/login_email_hint"
                android:textColorHint="@color/login_hint"
                app:counterEnabled="false"
                app:counterMaxLength="5"
                app:counterOverflowTextAppearance="@style/CounterOverFlow"
                app:counterTextAppearance="@style/CounterText"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/HintText"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/_10sdp"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btn_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgotLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/card_border"
                android:backgroundTint="@color/button_background"
                android:padding="@dimen/_10sdp"
                android:text="Submit"
                android:textColor="@color/white" />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>