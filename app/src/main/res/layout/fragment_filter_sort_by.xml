<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.filter.fragments.FilterSortByFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"

            >

            <RadioButton
                android:id="@+id/rb_newest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Newest"
                android:textSize="@dimen/_14sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:theme="@style/MyRadioButton"
                android:checked="true"
                android:textColor="#DE000000"/>

            <RadioButton
                android:id="@+id/rb_oldest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oldest"
                android:textSize="@dimen/_14sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:theme="@style/MyRadioButton"
                android:textColor="#DE000000"/>



            <RadioButton
                android:id="@+id/rb_resolve_newest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resolved Newest"
                android:textSize="@dimen/_14sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:theme="@style/MyRadioButton"
                android:textColor="#DE000000"/>


            <RadioButton
                android:id="@+id/rb_resolved_oldest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resolved Oldest"
                android:textSize="@dimen/_14sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:theme="@style/MyRadioButton"
                android:textColor="#DE000000"/>

            <RadioButton
                android:id="@+id/rb_unresolved_newest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unresolved Newest"
                android:textSize="@dimen/_14sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:theme="@style/MyRadioButton"
                android:textColor="#DE000000"/>

            <RadioButton
                android:id="@+id/rb_unresolved_oldest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unresolved Oldest"
                android:textSize="@dimen/_14sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:theme="@style/MyRadioButton"
                android:textColor="#DE000000"/>

        </RadioGroup>

</LinearLayout>
    </ScrollView>
</FrameLayout>